@model dynamic

@{
    ViewBag.Title = "New Rental Form";
}

<h2>New Rental Form</h2>

<form id="newRental">
    <div class="form-group">
        <label>Member</label>
        <div class="tt-container">
            <input id="member" type="text" value="" class="form-control" />
        </div>
    </div>
    
    <div class="form-group">
        <label>Book</label>
        <div class="tt-container">
            <input id="book" type="text" value="" class="form-control" />
        </div>
    </div>
    
    <div class="row">
        <div class="col-md-4 col-sm-4">
            <ul id="books" class="list-group"></ul>
        </div>
    </div>
    
    <button class="btn btn-primary">Submit</button>
</form>
@section scripts{
    <script>
        $(document).ready(function () {

            var vm = {
                bookIds: []
            };

            var members = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                prefetch: {
                    url: '/Api/Members',
                    cache: false
                }
            });

            $('#member').typeahead({
                minLength: 2,
                highlight: true     
            }, {
                name: 'members',
                display: 'name',
                source: members
            }).on("typeahead:select", function(e, member) {
                vm.memberId = member.id;
            });

            var books = new Bloodhound({
                datumTokenizer: Bloodhound.tokenizers.obj.whitespace('name'),
                queryTokenizer: Bloodhound.tokenizers.whitespace,
                prefetch: {
                    url: '/Api/Books',
                    cache: false
                }
            });

            $('#book').typeahead({
                minLength: 2,
                highlight: true     
            }, {
                name: 'books',
                display: 'name',
                source: books
            }).on("typeahead:select", function(e, book) {
                $("#books").append("<li class='list-group-item'>" + book.name + "</li>");

                $("#book").typeahead("val", "");

                vm.bookIds.push(book.id);
            });


            $("#newRental").submit(function(e) {
                e.preventDefault();

                $.ajax({
                        url: "/api/NewRentals",
                        method: "post",
                        data: vm
                    })
                    .done(function() {
                        toastr.success("Rentals successfully recorded.");
                    })
                    .fail(function() {
                        toastr.error("Something unexpected happened.");
                    });
            });
        });
    </script>
}